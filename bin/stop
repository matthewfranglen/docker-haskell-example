#!/bin/bash

set -euo pipefail

COMMAND=`readlink -f "${0}"`
BIN_DIRECTORY=`dirname "${COMMAND}"`
. "${BIN_DIRECTORY}/lib"

main () {
    check_environment
    stop_container
}

check_environment () {
    if no_docker_command
    then
        error_missing_docker
        exit 1
    fi
}

stop_container () {
    (
        cd "${ROOT_DIRECTORY}"

        local name=`get_project_name`
        local version=`get_project_version`

        echo "Stopping ${name}"

        docker stop "${name}"
    )
}

main
